{
    "manifest_version": 3,
    "name": "SharePoint Dev Links",
    "version": "1.1",
    "description": "Access a wide range of special SharePoint areas quickly without waiting for the page to load.",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "background" : {
      "service_worker" : "scripts/background.js",
      "type": "module"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://*.sharepoint.com/*", "https://*.europa.eu/*"],
    "content_scripts": [
        {
          "js": ["scripts/jquery.min.js", "scripts/content.js"],
          "matches": [
            "https://*.sharepoint.com/*",
            "https://*.europa.eu/*"
          ]
        }
      ],
    "action": {          
    },
    "web_accessible_resources":
    [
      {
        "resources": ["images/*.png"],
        "matches": ["<all_urls>"]
      }
    ],
    "options_page": "scripts/options.html"
}
  